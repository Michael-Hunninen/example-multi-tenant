# Vercel deployment environment variables
# Copy these variables to your Vercel project settings

# Database connection
DATABASE_URI=mongodb+srv://your-mongodb-uri
# or for PostgreSQL
# POSTGRES_URL=postgres://username:password@host:port/database

# Payload security
PAYLOAD_SECRET=your-payload-secret-key

# Server URLs - Update with your Vercel deployment URL
PAYLOAD_PUBLIC_SERVER_URL=https://your-vercel-app.vercel.app
NEXT_PUBLIC_SERVER_URL=https://your-vercel-app.vercel.app

# Optional: Stripe integration (if used)
STRIPE_SECRET_KEY=your-stripe-secret-key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_ENDPOINT_SECRET=your-stripe-webhook-secret

# Payload Admin creation
PAYLOAD_CREATE_ADMIN_EMAIL=your-admin-email@example.com
PAYLOAD_CREATE_ADMIN_PASSWORD=securePassword123!

# Build configuration
NEXT_PHASE=phase-production-build
